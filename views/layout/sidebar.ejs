<div class="sidebar">
        <div class="box auth">
                <% if (!user.id && !user.login) {%>  <!--если не зареган, то выводим всю фигню с регистрацией и входом-->

            <form method="post" class="login">
                    <h2>Вход</h2>
                    <div class="form-group">
                        <label for="login-login">Логин</label>
                        <input type="text" id="login-login" name="login"/>
                    </div>
                    <div class="form-group">
                        <label for="login-password">Пароль</label>
                        <input type="password" id="login-password" name="password" />
                    </div>

                    <div class="buttons">
                        <button class="switch-button secondary secondary-inverse">Регистрация</button>
                        <button class="login-button">Вход</button>
                    </div> 
            </form>
            
            <form method="post" class="register">
                    <h2>Регистрация</h2>
                    <div class="form-group">
                        <label for="register-login">Логин</label>
                        <input type="text" id="register-login" name="login"/>
                    </div>
                    <div class="form-group">
                        <label for="register-password">Пароль</label>
                        <input type="password" id="register-password" name="password" />
                    </div>
                    <div class="form-group">
                            <label for="register-password-confirm">Повторите пароль</label>
                            <input type="password" id="register-password-confirm" name="passwordConfirm" />
                    </div> 

                    <div class="buttons">
                        <button class="switch-button secondary secondary-inverse">Вход</button>
                        <button class="register-button">Зарегестрироваться</button>
                    </div> 
            </form>

            <% } else { %>
                <p>
                    Привет, <%= user.login  %>! <a href="/api/auth/logout">Выход</a>
                </p>
            <% } %>
        </div>
        <div class="box">
            box
        </div>
    </div>